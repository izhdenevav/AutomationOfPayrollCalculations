<Window x:Class="AutomationOfPayrollCalculations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationOfPayrollCalculations"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="170,146,0,0" Text="{Binding Login}" TextWrapping="Wrap" VerticalAlignment="Top" Width="445"/>
        <TextBox HorizontalAlignment="Left" Height="47" Margin="170,217,0,0" Text="{Binding Password}" TextWrapping="Wrap" VerticalAlignment="Top" Width="445"/>
        <Button Command="{Binding authCommand}" Content="Войти" HorizontalAlignment="Center" Margin="0,304,0,0" VerticalAlignment="Top" Height="30" Width="104"/>

    </Grid>
</Window>
